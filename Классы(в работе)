#include<iostream>  
#include<cmath>  
#include<iomanip>  
using namespace std;

class Time
{
private:
	int hours, minutes, seconds;
	int hours_new, min_new, sec_new;
public:
	void set_current_time(int h, int m, int s)
	{
		hours = h;
		minutes = m;
		seconds = s;
	}

	void show_current_time()
	{
		cout << hours << ":" << minutes << ":" << seconds << endl;
	}

	void set_new_time(int hour, int min, int sec)
	{
		sec_new = (seconds + sec) % 60;
		min_new = (minutes + min + (seconds + sec) / 60) % 60;
		hours_new = (hours + hour + (minutes + min + (seconds + sec) / 60) / 60) % 24;
	}

	void show_new_time()
	{
		cout << hours_new << ":" << min_new << ":" << sec_new << endl;
	}

	void moment()
	{
		int hour = 0, minute = 0, second;
		if (sec_new < seconds) { second = 60 - seconds + sec_new; minute -= 1;}
		else{ second = sec_new - seconds; }
		if (min_new < minutes) { minute += 60 - minutes + min_new; hour -= 1; }
		else { minute += min_new - minutes; }
		if (hours_new < hours) { hour += 24 - hours + hours_new;}
		else { hour += hours_new - hours; }
		cout << hour << ":" << minute << ":" << second << endl;
	}

};

int main()
{
	Time;
	Time time;
	time.set_current_time(12, 38, 42);
	time.show_current_time();
	time.set_new_time(0, 36, 41);
	time.show_new_time();
	time.moment();
	return 0;
}
